<div class="card">
    <div class="card-header">
        <h4 class="panel-title">
            <a class="text-info text-decoration-none" data-toggle="collapse" href="#action_information">Action</a>
        </h4>
    </div>
    <div id="action_information" class="collapse show" data-parent="#action_content">
        <div class="card-body">
            <div class="form-group">
                <label class="col-form-label col-form-label-sm">Available Actions</label>
                <select class="form-control form-control-sm text-info" id="actions"></select>
            </div>

            <div class="form-group">
                <label class="col-form-label col-form-label-sm">Argument</label>
                <input type="text" class="form-control form-control-sm text-monospace text-info" id="argument" placeholder="Additional data to pass into this action">
            </div>

            <div class="form-group" id="attributes_container">
                <label class="col-form-label col-form-label-sm">Available Attributes</label>
                <select class="form-control form-control-sm text-info" id="attributes"></select>
            </div>

            <div class="form-group">
                <label class="col-form-label col-form-label-sm">Regular Expression Filter</label>
                <input type="text" class="form-control form-control-sm text-monospace text-info" id="regular_expression" placeholder=".*">
            </div>
        </div>
    </div>
</div>