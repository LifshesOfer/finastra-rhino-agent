<div class="card">
    <div class="card-header">
        <h4 class="panel-title">
            <a class="text-info text-decoration-none" data-toggle="collapse" href="#locators_information">Locators</a>
        </h4>
    </div>
    <div id="locators_information" class="collapse" data-parent="#action_content">
        <div class="card-body">
            <div class="form-group">
                <label class="col-form-label col-form-label-sm">Alias (will be used in the steps instead of the locator)</label>
                <input type="text" class="form-control form-control-sm text-monospace text-info" id="alias" placeholder="Alias to be used instead of locator (i.e. my-element)">
            </div>

            <div class="form-group">
                <label class="col-form-label col-form-label-sm">Query Selector</label>
                <input type="text" class="form-control form-control-sm text-monospace text-info" id="query_selector" placeholder="#my_element">
            </div>

            <div class="form-group">
                <label class="col-form-label col-form-label-sm">Full Path (direct path - ignores attributes)</label>
                <input type="text" class="form-control form-control-sm text-monospace text-info" id="path" placeholder="//HTML[1]/BODY[1]/DIV[3]">
            </div>

            <div class="form-group">
                <label class="col-form-label col-form-label-sm">Short Path (by id attribute if available)</label>
                <input type="text" class="form-control form-control-sm text-monospace text-info" id="path_id" placeholder="//BUTTON[@@id='my_button_id']">
            </div>

            <div class="form-group">
                <label class="col-form-label col-form-label-sm">Element ID (by id attribute if available)</label>
                <input type="text" class="form-control form-control-sm text-monospace text-info" id="element_id" placeholder="my_button_id">
            </div>

            <div class="form-group">
                <label class="col-form-label col-form-label-sm">By link text (inner text of &lt;a&gt; tag)</label>
                <input type="text" class="form-control form-control-sm text-monospace text-info" id="link_text" placeholder="Customers">
            </div>

            <div class="form-group">
                <label class="col-form-label col-form-label-sm">By Accessibility ID (for mobile native applications)</label>
                <input type="text" class="form-control form-control-sm text-monospace text-info" id="accessibility_id" placeholder="my accessibility id">
            </div>

            <div class="form-group">
                <div class="custom-control custom-radio custom-control-inline">
                    <input type="radio" id="radio_alias" name="customRadio" class="custom-control-input radio-input">
                    <label class="custom-control-label small radio" for="radio_alias">
                        Alias
                    </label>
                </div>
                <div class="custom-control custom-radio custom-control-inline">
                    <input type="radio" id="radio_query_selector" name="customRadio" class="custom-control-input radio-input">
                    <label class="custom-control-label small radio" for="radio_query_selector">
                        Query Selector
                    </label>
                </div>
                <div class="custom-control custom-radio custom-control-inline">
                    <input type="radio" id="radio_path" name="customRadio" class="custom-control-input radio-input" checked>
                    <label class="custom-control-label small radio" for="radio_path">
                        Full Path
                    </label>
                </div>
                <div class="custom-control custom-radio custom-control-inline">
                    <input type="radio" id="radio_path_id" name="customRadio" class="custom-control-input radio-input">
                    <label class="custom-control-label small radio" for="radio_path_id">
                        Short Path
                    </label>
                </div>
                <div class="custom-control custom-radio custom-control-inline">
                    <input type="radio" id="radio_element_id" name="customRadio" class="custom-control-input radio-input">
                    <label class="custom-control-label small radio" for="radio_element_id">
                        ID
                    </label>
                </div>
                <div class="custom-control custom-radio custom-control-inline">
                    <input type="radio" id="radio_link_text" name="customRadio" class="custom-control-input radio-input">
                    <label class="custom-control-label small radio" for="radio_link_text">
                        Link Text
                    </label>
                </div>
                <div class="custom-control custom-radio custom-control-inline">
                    <input type="radio" id="radio_accessibility_id" name="customRadio" class="custom-control-input radio-input">
                    <label class="custom-control-label small radio" for="radio_accessibility_id">
                        Accessibility ID
                    </label>
                </div>
            </div>
        </div>
    </div>
</div>