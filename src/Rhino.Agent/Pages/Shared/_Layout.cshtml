@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    @if (Configuration.GetValue<bool>("Integrate"))
    {
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute"
              crossorigin="anonymous"
              integrity="@Configuration["Integration:bootstrap.min.css"]" />
    }
    else
    {
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    }
    
    <link rel="stylesheet" href="~/css/site.css" />

    <!-- start: font awesome -->
    <link rel="stylesheet" href="~/css/all.css">
    <script defer src="~/js/all.js"></script>
    <!-- end:   font awesome -->

    <!-- start: custom styles -->
    <style type="text/css">
        .argument {
            color: var(--red);
        }

        .verb {
            color: var(--blue);
            font-style: italic;
        }

        .keyword {
            color: var(--blue);
        }

        .action-button {
            color: var(--secondary);
        }

        .pointer {
            cursor: pointer
        }

        .action-button-green:hover {
            color: var(--success);
        }

        .action-button-red:hover {
            color: var(--danger);
        }

        .action-button-generic:hover {
            color: var(--info);
        }

        .medium-action-button {
            font-size: 25px;
        }

        .radio {
            display: inline-flex;
            align-items: center;
        }

        .radio-input {
            margin: 0 0.5rem 0;
        }

        html, .auto-body {
            height: 100%;
            margin: 0;
            padding: 0
        }

        .body {
            padding-bottom: 5px;
            padding-top: 110px;
            overflow: hidden
        }

        .body-content {
            overflow-y: auto;
            height: 100%
        }

        .bring-to-front {
            z-index: 999999;
        }
    </style>
    <!--end:   custom styles-->
</head>
<body class="auto-body body">
    <div id="main_container" class="container body-content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @if (Configuration.GetValue<bool>("Integrate"))
    {
        <script src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery"
                crossorigin="anonymous"
                integrity="@Configuration["Integration:jquery.min.js"]">
        </script>

        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"
                asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal"
                crossorigin="anonymous"
                integrity="@Configuration["Integration:bootstrap.bundle.min.js"]">
        </script>
    }
    else
    {
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>

    }
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSectionAsync("Scripts", required: false)
</body>
</html>